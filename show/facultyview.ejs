        <th>2:30-3:20</th>
        <th>3:20-4:10</th>
      </tr>
      <tr>
        <th class="week-names">Monday</th>
        <% for (var i = 1; i <= 8; i++) { %>
            <% var found = false; %>
            <% for (var j = 0; j < results.length; j++) { %>
                <% if (results[j].day == 'mon' && results[j].hour == i) { %> 
                    <% if(results[j].year != '' && results[j].subject != '') { %>
                        <th><%= results[j].subject %> - <%= results[j].year %><%= results[j].section %></th>
                    <% } else { %>
                        <th>-</th>
                    <% } %>
                    <% found = true; %>
                    <% break; %>
                <% } %>
            <% } %>
