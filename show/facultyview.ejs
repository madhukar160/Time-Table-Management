<html>
  <head>
    <title>Timetable</title>
    <style>
        table {
  border-collapse: collapse;
  width: 100%;
  font-size: 14px;
}

th, td {
  text-align: center;
  padding: 10px;
}

.time-interval th {
  background-color: #f5f5f5;
}

.week-names {
  background-color: #d3d3d3;
  font-weight: bold;
}

.timetable {
  margin: 0 auto;
  width: 80%;
  text-align: center;
  border: 2px solid #333;
  border-radius: 5px;
  padding: 20px;
}

.timetable h1 {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 20px;
}

.btn {
  padding: 10px 20px;
  background-color: #333;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
  margin-right: 20px;
  font-weight: bold;
}

.btn:hover {
  background-color: #555;
}

.heading {
  text-decoration: none;
  color: #333;
  font-size: 32px;
}

.heading:hover {
  color: #555;
}

header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  border-bottom: 2px solid #333;
}

header h4 {
  font-size: 18px;
  font-weight: bold;
  margin-left: 20px;
}

    </style>
    
  </head>
  <body>
    <header>
    
    <a href="/" class="btn">LOGOUT</a>
    
  </header>
  <div class="timetable">
    <h1 style="margin-top: 100px; text-align: center; margin-bottom: 20px;">Timetable</h1>
    <table border="1" cellspacing="0" cellpadding="4">
      <tr class="time-interval">
        <th>Day</th>
        <th>8:40-9:30</th>
        <th>9:30-10:20</th>
        <th>10:20-11:10</th>
        <th>11:10-12:00</th>
